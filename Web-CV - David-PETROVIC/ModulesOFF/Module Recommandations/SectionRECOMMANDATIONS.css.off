#recommandations{
	color: #c2c2c2;
	background-image:linear-gradient(#333 90%, #ddd 250%)
}

#recommandations .heading h2{
	color: #fff;
}

.fas.fa-chevron-left, .fas.fa-chevron-right  {
	color: #c2c2c2;
}

.carousel-indicators{
	bottom:0px;
}

.carousel-indicators li {

	box-shadow: 0px 0px 0.5px;
	background:#c2c2c2;
}

.carousel-indicators li.active, .carousel-indicators li:hover{
	background-color: #1d6376;
	transition: all 0.1s ease-in;
}

#myCarousel .carousel-item{
	padding: 40px 30px;
}

#myCarousel .carousel-item h3{
	color: #3ea3d6;
	font-style: italic
}

